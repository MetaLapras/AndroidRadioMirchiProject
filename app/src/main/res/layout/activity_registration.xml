<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="4dp"
        android:id="@+id/root_layout"
        tools:context=".RegistrationActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="20dp"
                >

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_FirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:text="Jacki"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    app:met_baseColor="@color/colorPrimary"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_singleLineEllipsis="true" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_LastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:text="Chan"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    app:met_floatingLabel="highlight"
                    app:met_baseColor="@color/colorPrimary"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_singleLineEllipsis="true"
                    />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_DateOfBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date of Birth"
                    android:text="09/07/2018"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    app:met_floatingLabel="highlight"
                    app:met_baseColor="@color/colorPrimary"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_singleLineEllipsis="true"
                    />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_EmailId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email Id"
                    android:text="jackiChan@gmail.com"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    app:met_floatingLabel="highlight"
                    app:met_baseColor="@color/colorPrimary"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_singleLineEllipsis="true"
                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_MobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile No"
                    android:text="9211420420"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    app:met_floatingLabel="highlight"
                    app:met_baseColor="@color/colorPrimary"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_singleLineEllipsis="true"
                    />

                <TextView
                    android:textSize="20sp"
                    android:id="@+id/textView3"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selet Gender" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="10dp"
                    android:id="@+id/rdg_group"
                    android:layout_margin="10dp">

                    <RadioButton
                        android:id="@+id/rd_male"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:text="Male" />

                    <RadioButton
                        android:id="@+id/rd_female"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:text="Female" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Select Image"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:elevation="10dp"
                        android:layout_margin="10dp"
                        />

                    <Button
                        android:id="@+id/btnSelect"
                        android:text="Select"
                        android:textColor="@android:color/white"
                        android:layout_width="0dp"
                        android:background="@color/primary"
                        android:layout_margin="8dp"
                        android:textSize="20sp"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:shadowColor="@android:color/black"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnUpload"
                        android:text="Submit"
                        android:textColor="@android:color/white"
                        android:layout_width="0dp"
                        android:background="@color/colorAccent"
                        android:layout_margin="8dp"
                        android:textSize="20sp"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:shadowColor="@android:color/black"
                        android:layout_weight="1"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>